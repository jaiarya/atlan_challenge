{
  "id": null,
  "uid": "atlan-sre-end2end",
  "title": "Atlan Restarts, OOM & Backend Endpoints",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "tags": [
    "atlan",
    "sre",
    "oom",
    "restarts",
    "service-discovery"
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "15s",
      "30s",
      "1m",
      "5m",
      "10m"
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "hide": false,
        "enable": true
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "hide": 0
      },
      {
        "name": "namespace",
        "type": "custom",
        "label": "Namespace",
        "query": "atlan",
        "hide": 0,
        "current": {
          "selected": true,
          "text": "atlan",
          "value": "atlan"
        },
        "options": [
          {
            "text": "atlan",
            "value": "atlan",
            "selected": true
          }
        ]
      },
      {
        "name": "pod",
        "type": "custom",
        "label": "Pod regex",
        "query": "frontend-deploy.*|backend-deploy.*",
        "hide": 0,
        "current": {
          "selected": true,
          "text": "frontend-deploy.*",
          "value": "frontend-deploy.*"
        },
        "options": [
          {
            "text": "frontend-deploy.*",
            "value": "frontend-deploy.*",
            "selected": true
          },
          {
            "text": "backend-deploy.*",
            "value": "backend-deploy.*"
          },
          {
            "text": "Both (frontend|backend)",
            "value": "(frontend|backend)-deploy.*"
          }
        ]
      },
      {
        "name": "container",
        "type": "custom",
        "label": "Container regex",
        "query": "nginx|backend|.*",
        "hide": 0,
        "current": {
          "selected": true,
          "text": "nginx",
          "value": "nginx"
        },
        "options": [
          {
            "text": "nginx",
            "value": "nginx",
            "selected": true
          },
          {
            "text": "backend",
            "value": "backend"
          },
          {
            "text": "All (.*)",
            "value": ".*"
          }
        ]
      },
      {
        "name": "service",
        "type": "custom",
        "label": "Service (endpoint name)",
        "query": "backend-svc",
        "hide": 0,
        "current": {
          "selected": true,
          "text": "backend-svc",
          "value": "backend-svc"
        },
        "options": [
          {
            "text": "backend-svc",
            "value": "backend-svc",
            "selected": true
          }
        ]
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Restarts \u2014 last 1h (sum per pod)",
      "description": "How many restarts occurred in the past hour per pod.",
      "gridPos": {
        "h": 5,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod) (increase(kube_pod_container_status_restarts_total{namespace=\"$namespace\",pod=~\"$pod\",container!=\"\"}[1h]))",
          "instant": true
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "sum"
          ],
          "values": false
        },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "yellow",
                "value": 3
              },
              {
                "color": "red",
                "value": 10
              }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Pod restarts over time (per container)",
      "description": "Increase in restarts per $__rate_interval.",
      "gridPos": {
        "h": 9,
        "w": 16,
        "x": 8,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod, container) (increase(kube_pod_container_status_restarts_total{namespace=\"$namespace\",pod=~\"$pod\",container=~\"$container\"}[$__rate_interval]))",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "lastNotNull",
            "max",
            "sum"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "OOMKilled terminations (delta)",
      "description": "Containers terminated with reason=OOMKilled per $__rate_interval.",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 5
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod, container) (increase(kube_pod_container_status_last_terminated_reason{namespace=\"$namespace\",reason=\"OOMKilled\",pod=~\"$pod\",container=~\"$container\"}[$__rate_interval]))",
          "legendFormat": "{{pod}} / {{container}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "lastNotNull",
            "sum"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "bars",
            "barAlignment": 0,
            "lineWidth": 0,
            "fillOpacity": 80,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Pod memory usage vs limit",
      "description": "Working set memory vs memory limit.",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 5
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "Usage",
          "expr": "sum by (pod, container) (container_memory_working_set_bytes{namespace=\"$namespace\",pod=~\"$pod\",container=~\"$container\",image!=\"\",container!=\"POD\"})",
          "legendFormat": "usage: {{pod}} / {{container}}"
        },
        {
          "refId": "Limit",
          "expr": "sum by (pod, container) (kube_pod_container_resource_limits{namespace=\"$namespace\",pod=~\"$pod\",container=~\"$container\",resource=\"memory\",unit=\"byte\"})",
          "legendFormat": "limit: {{pod}} / {{container}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "limit:.*"
            },
            "properties": [
              {
                "id": "custom.lineWidth",
                "value": 1
              },
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              },
              {
                "id": "custom.lineStyle",
                "value": {
                  "fill": "dash",
                  "dash": [
                    6,
                    4
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "type": "gauge",
      "title": "backend-svc endpoints available (addresses)",
      "description": "Counts ready endpoint addresses for the Service. With selector mismatch, this stays at 0.",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 13
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 3,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red"
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "green",
                "value": 2
              }
            ]
          }
        }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(kube_endpoint_address_available{namespace=\"$namespace\", endpoint=\"$service\"})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Endpoint missing? (1=yes, 0=no)",
      "description": "Uses absent() to light up when there are 0 available endpoints.",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 13
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "absent(sum(kube_endpoint_address_available{namespace=\"$namespace\", endpoint=\"$service\"}) > 0)"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "values": false
        },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "red",
                "value": 0.5
              }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Node MemoryPressure (1=true)",
      "description": "Correlate node pressure with frontend restarts/ooms.",
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 19
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (node) (kube_node_status_condition{condition=\"MemoryPressure\",status=\"true\"} == 1)",
          "legendFormat": "{{node}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "red",
                "value": 0.5
              }
            ]
          },
          "custom": {
            "drawStyle": "step",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Node Memory Usage (Used vs Total)",
      "description": "Tracks real node-level memory usage to compare against MemoryPressure events.",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 25
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "Used",
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes)",
          "legendFormat": "Used Memory ({{instance}})"
        },
        {
          "refId": "Total",
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total Memory ({{instance}})"
        },
        {
          "refId": "UsedPct",
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
          "legendFormat": "Used % ({{instance}})"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": [
            "lastNotNull",
            "max"
          ]
        },
        "tooltip": {
          "mode": "multi",
          "sort": "desc"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "never"
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byRegexp",
              "options": "Used %.*"
            },
            "properties": [
              {
                "id": "unit",
                "value": "percent"
              },
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              },
              {
                "id": "custom.lineStyle",
                "value": {
                  "fill": "dash",
                  "dash": [
                    4,
                    4
                  ]
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
